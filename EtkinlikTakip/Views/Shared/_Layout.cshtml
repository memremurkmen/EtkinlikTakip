<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EtkinlikTakip</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/sidenav.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    <link href="https://cdn.kendostatic.com/2022.2.510/styles/kendo.bootstrap-main.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.kendostatic.com/2022.2.510/js/jquery.min.js"></script>
    <script src="https://cdn.kendostatic.com/2022.2.510/js/jszip.min.js"></script>
    <script src="https://cdn.kendostatic.com/2022.2.510/js/kendo.all.min.js"></script>
    <script src="https://cdn.kendostatic.com/2022.2.510/js/kendo.aspnetmvc.min.js"></script>
    <script src="https://cdn.kendostatic.com/2022.2.510/js/cultures/kendo.culture.tr-TR.min.js"></script>
    <script src="https://cdn.kendostatic.com/2022.2.510/js/messages/kendo.messages.tr-TR.min.js"></script>
    <script src="https://cdn.kendostatic.com/2022.2.510/js/kendo.timezones.min.js"></script>
    <script type="text/javascript">
        kendo.culture("tr-TR");
    </script>
</head>
<body class="k-content">

    <div id="mySidenav" class="sidenav">
        <img style="width:75px;height:75px; margin-left:62.5px" src="~/images/cumhurbaskaligi-armasi.png" alt="Cumhurbaşkanlığı Arması">
        <a href="Etkinlik">Etkinlikler</a>
        <a href="Login/Login">Login</a>
        <a href="#">Services</a>
        <a href="#">Clients</a>
        <a href="#">Contact</a>
    </div>

    <main id="main">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg bg-light">
                <span style="font-size:30px;cursor:pointer" onclick="changeNav()">&#9776;</span>
                @*<div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Etkinlik" asp-action="Etkinliklerim">Etkinliklerim</a>
                        </li>
                        <li class="adminEkrani nav-item">
                            <a class="nav-link" asp-controller="Kullanici" asp-action="Kullanicilar">Kullanıcılar</a>
                        </li>
                        <li class="yetkiliVeAdminEkrani nav-item">
                            <a class="nav-link" asp-controller="Etkinlik" asp-action="Etkinlikler">Etkinlikleri Yönet</a>
                        </li>
                    </ul>
                </div>*@
                <div class="dropdown" style="margin-left:auto;">
                    <button class="btn btn-dark dropdown-toggle" type="button" data-toggle="dropdown">
                        Emre Türkmen
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item btn-dark" href="/User/Hesabım">Hesabım</a></li>
                        <li><a class="dropdown-item btn-dark" href="/GirisVeKayit/CikisYap">Oturumu Kapat</a></li>
                    </ul>
                </div>

            </nav>
        </div>
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>

    @*<footer class="footer text-center d-flex align-items-center">
    <div class="container-fluid">
    <p class="text-muted">
    Copyright © @DateTime.Now.Year Progress Software Corporation and/or its subsidiaries or affiliates. All rights reserved.
    </p>
    </div>
    </footer>*@

    <environment names="Development">
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"></script>
    </environment>

    @RenderSection("scripts", required: false)
    <script>
        var navOpen = true;
        function changeNav() {
            if (navOpen) {
                document.getElementById("mySidenav").style.width = "0";
                document.getElementById("main").style.marginLeft = "0";
                navOpen = false;
            }
            else {
                document.getElementById("mySidenav").style.width = "200px";
                document.getElementById("main").style.marginLeft = "200px";
                navOpen = true;
            }
        }
    </script>
</body>
</html>